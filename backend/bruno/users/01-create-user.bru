meta {
  name: Create User
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/users
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "name": "{{ownerName}}",
    "email": "{{ownerEmail}}",
    "password": "{{ownerPassword}}"
  }
}

script:post-response {
  const data = res.getBody();

  if (data?.id) {
    bru.setEnvVar("ownerUserId", data.id, { persist: true });
  }
}
