meta {
  name: Create House
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/api/houses
  body: json
  auth: none
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "name": "Family House",
    "userId": "{{ownerUserId}}"
  }
}

script:post-response {
  const data = res.getBody();

  if (data?.id) {
    bru.setEnvVar("houseId", data.id, { persist: true });
  }

  if (data?.code) {
    bru.setEnvVar("houseCode", data.code, { persist: true });
  }
}
